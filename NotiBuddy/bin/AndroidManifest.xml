<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notibuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/imoticon_y"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service 
            android:name="ActivityOnService"></service>
        
        <activity
            android:name="com.example.notibuddy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.notibuddy.SignChoice" >
         </activity>
         
        <activity
            android:name="com.example.notibuddy.SignIn" >
         </activity>
        
        <activity
            android:name="com.example.notibuddy.SignUp" >
         </activity>
         
        <activity
            android:name="com.example.notibuddy.DeviceSort" >
         </activity>
    </application>

</manifest>
